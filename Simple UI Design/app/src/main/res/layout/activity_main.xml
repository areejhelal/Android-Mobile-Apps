<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_below="@+id/logo"
        android:scaleType="centerCrop"
        android:src="@drawable/place" />

    <ImageView

        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"


        />


    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Udacity is where lifelong learners come to learn the skills they need, to land the jobs they want, to build the lives they deserve.
Udacity is avilable anytime , anywhere :) "
        android:textColor="#234654"
        android:textSize="15sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service"
        android:padding="15dp"
        android:text="Contacts : "
        android:textColor="#ff8100"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:padding="5dp"
        android:src="@drawable/phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_toRightOf="@id/phone"
        android:padding="5dp"
        android:text="650-555-5555"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:padding="5dp"
        android:src="@drawable/location" />

    <TextView
        android:id="@+id/addressr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_toEndOf="@+id/location"
        android:layout_toRightOf="@+id/location"
        android:padding="5dp"
        android:text="2465 Latham st
Mountain View , CA 94043"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addressr"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:padding="5dp"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressr"
        android:layout_toRightOf="@+id/location"
        android:padding="5dp"
        android:text="www.udacity.com"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>
